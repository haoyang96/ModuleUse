<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.moduleuse.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改"
        android:id="@+id/button"

        android:enabled="true"
        android:layout_alignParentTop="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to China! "
        android:id="@+id/textView2"
        android:layout_below="@+id/checkBox"
        android:layout_toEndOf="@+id/button"
        android:layout_marginStart="86dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="input option1"
        android:id="@+id/checkBox"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="input option2"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/rdbGp1"
        android:layout_below="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_marginTop="29dp"
        android:layout_toStartOf="@+id/textView3">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:id="@+id/radioButton"
            android:layout_marginTop="49dp"
            android:layout_below="@+id/checkBox2"
            android:layout_alignEnd="@+id/checkBox2"
            android:layout_alignStart="@+id/checkBox2" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天津"
            android:id="@+id/radioButton2"
            android:layout_below="@+id/radioButton"
            android:layout_marginTop="28dp"
            android:layout_alignStart="@+id/radioButton"
            android:layout_alignEnd="@+id/radioButton" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="option选择"
        android:id="@+id/textView3"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="68dp"
        android:layout_alignTop="@+id/rdbGp1"
        android:layout_alignStart="@+id/textView2" />

</RelativeLayout>
